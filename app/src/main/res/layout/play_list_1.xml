<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/back_ground"
    android:paddingVertical="15dp"
    style="@style/Rounded_corner"

    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/play_list_image"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="#63454A"
        android:contentDescription="@string/music_image"
        android:src="@drawable/headphone"
        app:shapeAppearanceOverlay="@style/Rounded_corner" />

    <TextView
        android:id="@+id/play_list_name"

        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/playListName"
        android:textColor="@color/white"
        android:textSize="18sp"
        />

    <ImageButton
        android:id="@+id/delete_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
       android:layout_marginStart="350dp"

        android:layout_marginBottom="1dp"

        android:background="@android:color/transparent"
        android:contentDescription="@string/library_bt"
        android:padding="4dp"
        android:src="@drawable/delete_icon"

       />

</androidx.cardview.widget.CardView>